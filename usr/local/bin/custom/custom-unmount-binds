#!/bin/bash
# Filename_________: custom-unmount-binds
# Filetype_________: Bash script
# Author___________: fkol k4
# Address__________: fkolyvas@gmail.com
# Short description: unbind chroot bindings after exiting chroot

sudo umount -v -l run
sudo umount -v -l sys
sudo umount -v -l dev/pts
sudo umount -v -l dev
sudo umount -v -l proc

